<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="SensorData.Views.FirstPage">
    <ContentPage.Content>
        <StackLayout HorizontalOptions="Center" VerticalOptions="Center" Orientation="Vertical" Spacing="10">
            <Entry Focused="Entry_Focused" Placeholder="Enter Ur Name" Text="{Binding Uname}"></Entry>
            <Entry Placeholder="Enter 9Ib_ha@Z@q as Password" Text="{Binding PassWord}" IsPassword="True" Focused="Entry_Focused"></Entry>
            <Button Text="Login normally" HorizontalOptions="Center" VerticalOptions="Center" Command="{Binding LoginCommand}"/>
            <Button Text="Login with Magic" HorizontalOptions="Center" VerticalOptions="Center" Command="{Binding FingerPrintCommand}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
